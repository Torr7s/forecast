{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "sourceMap": true,
    "allowJs": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "strict": false,
    "skipLibCheck": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@tests/*": [
        "./tests/*"
      ]
    },
    "rootDirs": [
      "./src",
      "./tests"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./src/**/*.ts",
    "./tests/**/*.ts"
  ],
  "exclude": [
    "./node_modules/*",
    "./build"
  ]
}