{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@tests/*": ["tests/*"]
    },
    "rootDirs": [
      "./src",
      "./tests"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./tests/**/*.ts"
  ],
  "exclude": [
    "./node_modules/*",
    "build"
  ]
}